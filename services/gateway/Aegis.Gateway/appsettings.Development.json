{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "llm_chat" : {
        "ClusterId": "ollama_cluster",
        "Match": {
          "Path": "api/generate"
        },
        "MetaData" : {
          "InspectPrompt" : true
        } 
      }
    },
    "Clusters": {
      "ollama_cluster": {
        "Destinations": {
          "ollama": {
            "Address": "http://localhost:11434"
          }
        }
      }
    }
  },
  "PromptInspectionService": {
    "BaseUri" : "https://localhost:8000"
  }
}